
<div class="column is-half is-offset-one-quarter has-text-centered">
    <div class="card">
        <div class="card-content">
            <div class="content">
                {{comment.commentText}}
            </div>
            {{#if isOwner}}
            <div class="buttons are-small">
                <a class="button is-danger" href="/challenges/{{comment.challengeId}}/comments/{{comment.id}}/delete">Delete</a>
                <a class="button is-info" href="/challenges/{{comment.challengeId}}/comments/{{comment.id}}/update">Update</a>
            </div>
            {{/if}}
        </div>
    </div>
</div>



