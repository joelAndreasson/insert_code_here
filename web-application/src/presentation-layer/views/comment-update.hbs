{{#if isLoggedIn}}
    <h1>Update comment</h1>

    {{#if errors.length}}
        <p>Oh no, something went wrong:</p>
        <ul>
            {{#each errors}}
            <li>{{this}}</li>
            {{/each}}
        </ul>
    {{/if}}

    <form action="/challenges/{{comment.challengeId}}/comments/{{comment.id}}/update" method="post">
        <textarea name="commentText" placeholder="Comment Text">{{comment.commentText}}</textarea>

        <div class="control">
            <input type="hidden" name="_csrf" value="{{csrfToken}}">
            <button class="button is-info" type="submit" value="Create">Update</button>
        </div>
    </form>
{{else}}
    <div class="has-text-centered">
        <h2>You are not logged in and do not have access to this!</h2>
        <a href="/accounts/login">Login</a>
    </div>
{{/if}}
