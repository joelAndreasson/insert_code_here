{{#if errors.length}}
    <p>Oops, something went wrong:</p>
    <ul>
        {{#each errors}}
        <li>{{this}}</li>
        {{/each}}
    </ul>
    
{{else}}
    {{#if challenge}}

        <h1 class="has-text-centered is-size-2">{{challenge.title}}</h1>
        <div class="box m-4"></div>
        <div class="has-text-centered">
            <a href="/challenges/{{challenge.id}}/play">
                <button class="button is-primary is-large is-rounded">
                    Play Challange
                </button>
            </a>
        </div>

        <div class="content">
            <h1>{{challenge.title}}</h1>
            <p>challengeText: {{challenge.challengeText}}</p>
            <p>solutionText: {{challenge.solutionText}}</p>
            <p>description: {{challenge.description}}</p>
            <p>datePublished: {{challenge.datePublished}}</p>
            <p>accountUsername: {{challenge.accountUsername}}</p>
            <p>numOfPlays: {{challenge.numOfPlays}}</p>
            <p>difficulty: {{challenge.difficulty}}</p>
            <p>progLanguage: {{challenge.progLanguage}}</p>
        </div>
        


        <div class="has-text-centered">
            <a href="/challenges/{{challenge.id}}/comments/create">
                <button class="button is-primary is-large is-rounded">
                    Add Comment
                </button>
            </a>
        </div>

        {{#if comments.length}}

            <div class="border-bottom"></div>

            {{#each comments}}
                <div class="card">
                    <div class="card-content">
                        <a href="/accounts/{{accountUsername}}" class="subtitle">
                            {{accountUsername}}
                        </a>
                        <div class="content">
                            commentText: {{commentText}}
                        </div>
                    </div>
                </div>
            {{/each}}

        {{else}}
            <p>No comments exist on this challenge yet.</p>
        {{/if}}


    {{else}}
        <p>This challenge does not exist.</p>
    {{/if}}
{{/if}}