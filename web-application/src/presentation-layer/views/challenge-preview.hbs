{{#if errors.length}}
    <p>Oops, something went wrong:</p>
    <ul>
        {{#each errors}}
        <li>{{this}}</li>
        {{/each}}
    </ul>
    
{{else}}
    {{#if challenge}}

        <h1 class="has-text-centered is-size-2">{{challenge.title}}</h1>
        <div class="box m-4">

        </div>
        <div class="has-text-centered">
            <a href="/challenges/{{challenge.id}}/play">
                <button class="button is-primary is-large is-rounded">
                    Play Challange
                </button>
            </a>
        </div>

        <!--id INT UNSIGNED AUTO_INCREMENT PRIMARY KEY,
    title VARCHAR(255),
    challengeText VARCHAR(255),
    progLanguage VARCHAR(127),
    difficulty VARCHAR(127),
    description VARCHAR(255),
    datePublished DATE,
    numOfPlays INT,
    userId INT*/-->

        <div class="content">
            <h1>{{challenge.title}}</h1>
            <p>description: {{challenge.description}}</p>
            <p>challengeText: {{challenge.challangeText}}</p>
            <p>datePublished: {{challenge.datePublished}}</p>
            <p>userId: {{challenge.userId}}</p>
            <p>numOfPlays: {{challenge.numOfPlays}}</p>
            <p>difficulty: {{challenge.difficulty}}</p>
            <p>progLanguage: {{challenge.progLanguage}}</p>
        </div>
        


        <!-- PLACEHOLDER COMMENTS -->
        <div class="border-bottom"></div>
        <div class="card">
            <div class="card-content">
                <p class="subtitle">
                    Mattias
                </p>
                <div class="content">
                    Such a nice text, and the challange was nice too.
                </div>
            </div>
        </div>
        <div class="card">
            <div class="card-content">
                <p class="subtitle">
                    Joel
                </p>
                <div class="content">
                    Get a job!
                </div>
            </div>
        </div>
        <div class="card">
            <div class="card-content">
                <p class="subtitle">
                    To emotinally connected man
                </p>
                <div class="content">
                    When i was a small child... bla bla bla life story comment.
                </div>
            </div>
        </div>
        <!-- END OF PLACEHOLDER COMMENTS -->

    {{else}}
        <p>This challenge does not exist.</p>
    {{/if}}
{{/if}}