<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>INSERT_CODE_HERE</title>
</head>
<body>
    <h1>Create Challange</h1>
    <div class="section">
        <form class="is-half" action="">
            <!-- Challange name -->
            <div class="field">
                <label class="label">Challange Name</label>
                <div class="control">
                    <input class=".input" type="text" placeholder="Challange Name" name="challangeName">
                </div>
            </div>
            <!-- Language -->
            <div class="field">
                <label class="label">Language</label>
                <div class="control">
                    <select name="challangeLanguage">
                        <option selected>Language</option>
                        <option value="temp-c++">C++</option>
                        <option value="temp-python">Python</option>
                        <option value="temp-kotlin">Kotlin</option>
                    </select>
                </div>
            </div>
            <!-- Challange Text -->
            <div class="field">
                <label class="label">Challange Text</label>
                <div class="control">
                    <input type="textarea" placeholder="Challange Text" name="challangeText">
                </div>
            </div>
            <!-- Description -->
            <div class="field">
                <label class="label">Description</label>
                <div class="control">
                    <input type="textarea" placeholder="Description" name="description">
                </div>
            </div>
            <!-- Difficulty -->
            <div class="field">
                <div class="control">
                    <label class="radio">
                        <input value="Bronze" type="radio" name="difficulty">
                        Bronze
                    </label>
                    <label class="radio">
                        <input value="Silver" type="radio" name="difficulty">
                        Silver
                    </label>
                    <label class="radio">
                        <input value="Gold" type="radio" name="difficulty">
                        Gold
                    </label>
                </div>
            </div>
            <!-- Submit buttons -->
            <div class="field is-grouped">
                <div class="control">
                    <button class="button is-success">Create</button>
                </div>
                <div class="control">
                    <button class="button is-danger">Cancel</button>
                </div>
            </div>
        </form>
    </div>
</body>
</html>